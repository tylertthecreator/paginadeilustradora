├── app/
│   ├── about/
│   │   ├── layout.tsx    # Metadata for about page
│   │   └── page.tsx      # Client Component with animations
│   ├── work/
│   │   ├── layout.tsx    # Metadata for work page
│   │   ├── page.tsx      # Client Component with dynamic import
│   │   └── WorkGallery.tsx # Interactive gallery component
│   ├── shop/
│   │   └── page.tsx      # Client Component
│   ├── contact/
│   │   └── page.tsx      # Client Component with form
│   ├── layout.tsx        # Root layout with fonts and providers
